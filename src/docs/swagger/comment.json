{
  "paths": {
    "/api/v1/verifications/{verificationId}/comment": {
      "post": {
        "summary": "챌린지 인증 댓글 작성 API",
        "description": "특정 챌린지 인증에 댓글을 작성하는 API입니다.",
        "tags": ["Challenge:Verification"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "verificationId",
            "required": true,
            "schema": { "type": "string", "example": "456" },
            "description": "인증 ID"
          }
        ],
        "requestBody": {
          "required": true,
          "description": "댓글 작성 요청 본문 데이터",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "content": { "type": "string", "example": "이 인증 정말 좋네요!", "description": "댓글 내용" },
                  "anonymous": { "type": "boolean", "example": false, "description": "익명 여부" }
                },
                "required": ["content", "anonymous"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "댓글 작성 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "resultType": { "type": "string", "example": "SUCCESS" },
                    "error": { "type": "object", "nullable": true, "example": null },
                    "success": {
                      "type": "object",
                      "properties": {
                        "commentId": { "type": "string", "example": "comment12345" },
                        "content": { "type": "string", "example": "이 인증 정말 좋네요!" },
                        "createdAt": { "type": "string", "format": "date-time", "example": "2025-01-08T12:34:56Z" }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "특정 인증 댓글 조회 API",
        "description": "특정 챌린지 인증에 작성된 댓글들을 조회하는 API입니다.",
        "tags": ["Challenge:Verification"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "verificationId",
            "required": true,
            "schema": { "type": "string", "example": "456" },
            "description": "인증 ID"
          }
        ],
        "responses": {
          "200": {
            "description": "댓글 목록 조회 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "resultType": { "type": "string", "example": "SUCCESS" },
                    "error": { "type": "object", "nullable": true, "example": null },
                    "success": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": { "type": "integer", "example": 10 },
                          "user_id": { "type": "integer", "example": 1 },
                          "nickname": { "type": "string", "example": "김흐르" },
                          "content": { "type": "string", "example": "이 인증 정말 좋네요!" },
                          "created_at": {
                            "type": "string",
                            "format": "date-time",
                            "example": "2025-01-31T08:44:46.065Z"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/comment/{commentId}": {
      "patch": {
        "summary": "특정 인증 댓글 수정 API",
        "description": "특정 인증에 작성된 댓글을 수정하는 API입니다.",
        "tags": ["Challenge:Verification"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "commentId",
            "required": true,
            "schema": { "type": "string", "example": "456" },
            "description": "댓글 ID"
          }
        ],
        "requestBody": {
          "required": true,
          "description": "댓글 수정 요청 본문 데이터",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "content": {
                    "type": "string",
                    "example": "이 인증은 정말 멋집니다!",
                    "description": "수정할 댓글 내용"
                  }
                },
                "required": ["content"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "댓글 수정 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "resultType": { "type": "string", "example": "SUCCESS" },
                    "error": { "type": "object", "nullable": true, "example": null },
                    "success": {
                      "type": "object",
                      "properties": {
                        "commentId": { "type": "integer", "example": 1 },
                        "content": { "type": "string", "example": "이 인증은 정말 멋집니다!" },
                        "updatedAt": { "type": "string", "format": "date-time", "example": "2025-01-08T13:00:00Z" }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
