    "/api/v1/challenge/{challengeId}/challengerslist": {
      "get": {
        "summary": "챌린저 리스트 조회 API",
        "description": "특정 챌린지에 참가한 챌린저 리스트를 조회하는 API입니다. 각 챌린저의 인증 횟수와 상태도 함께 표시됩니다.",
        "tags": ["Challenge"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "challengeId",
            "required": true,
            "schema": { "type": "string", "example": "101" },
            "description": "챌린지 ID"
          }
        ],
        "responses": {
          "200": {
            "description": "챌린저 리스트 조회 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "integer", "example": 5 },
                      "nickname": { "type": "string", "example": "john_doe" },
                      "owner": { "type": "boolean", "example": true }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "챌린지를 찾을 수 없음",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "resultType": { "type": "string", "example": "NOT_FOUND" },
                    "error": { "type": "string", "example": "Challenge not found." }
                  }
                }
              }
            }
          }
        }
      }
    },
