{
  "paths": {
    "/api/v1/verifications/{verificationId}/scrap": {
      "post": {
        "summary": "특정 인증 스크랩 API",
        "description": "특정 챌린지 인증을 스크랩하는 API입니다.",
        "tags": ["Challenge:Verification"],
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "verificationId",
            "required": true,
            "schema": { "type": "string", "example": "456" },
            "description": "인증 ID"
          }
        ],
        "requestBody": {
          "required": false,
          "description": "요청 본문 데이터는 비어 있습니다.",
          "content": {
            "application/json": {
              "schema": { "type": "object", "properties": {} }
            }
          }
        },
        "responses": {
          "200": {
            "description": "스크랩 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "resultType": { "type": "string", "example": "SUCCESS" },
                    "error": { "type": "object", "nullable": true, "example": null },
                    "success": {
                      "type": "object",
                      "properties": {
                        "verificationId": { "type": "integer", "example": 101 },
                        "userId": { "type": "integer", "example": 1 },
                        "scrapCount": { "type": "integer", "example": 5 }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "특정 인증 스크랩 취소 API",
        "description": "특정 챌린지 인증에 추가된 스크랩을 취소하는 API입니다.",
        "tags": ["Challenge:Verification"],
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "verificationId",
            "required": true,
            "schema": { "type": "string", "example": "456" },
            "description": "인증 ID"
          }
        ],
        "requestBody": {
          "required": true,
          "description": "스크랩 취소 요청 데이터",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "scrapId": { "type": "string", "example": "scrap12345", "description": "취소할 스크랩 ID" }
                },
                "required": ["scrapId"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "스크랩 취소 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "resultType": { "type": "string", "example": "SUCCESS" },
                    "error": { "type": "object", "nullable": true, "example": null },
                    "success": {
                      "type": "object",
                      "properties": {
                        "verificationId": { "type": "integer", "example": 101 },
                        "userId": { "type": "integer", "example": 1 },
                        "scrapCount": { "type": "integer", "example": 4 }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
