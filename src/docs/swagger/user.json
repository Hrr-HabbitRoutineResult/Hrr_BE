      "put": {
        "summary": "사용자 관심사 수정 API",
        "description": "사용자가 자신의 관심사를 수정하는 API입니다.",
        "tags": ["User"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [],
        "requestBody": {
          "required": true,
          "description": "관심사 수정 요청 정보",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "resultType": { "type": "string", "example": "SUCCESS" },
                  "error": { "type": "object", "nullable": true, "example": null },
                  "success": {
                    "type": "object",
                    "properties": {
                      "interests": {
                        "type": "array",
                        "items": { "type": "string", "example": "운동" }
                      }
                    }
                  }
                },
                "required": ["interests"]
